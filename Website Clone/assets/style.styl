@font-face
    font-family "MarkOT-Regular"
    src url("font/MarkOT-Regular.woff") format("woff"),url("fonts/MarkOT-Regular.ttf") format("truetype")
    font-weight normal
    font-style normal
@font-face
    font-family "MarkOT-Medium"
    src url("fonts/MarkOT-Medium.woff") format("woff"),url("fonts/MarkOT-Medium.ttf") format("truetype")
    font-weight normal
    font-style normal
@font-face
    font-family "MarkOT-Bold"
    src url("fonts/MarkOT-Bold.woff") format("woff"),url("fonts/MarkOT-Bold.ttf") format("truetype")
    font-weight normal
    font-style normal
body
    margin 0
    padding 0
    box-sizing border-box
.nav
    height auto
    width 100%
    background-color rgb(34, 33, 33)
    overflow hidden
    display flex
    padding 0
    justify-content space-around
    gap 20%
    &list
        list-style-type none
        margin 0
        padding 0
        overflow hidden
        &-container
            margin auto
.logo
    float left
    width auto
    margin 2% 0 1% 10%
    padding 5px
.searchlogo
    float left
    margin 2% 0 1% -2%
    padding 5px
li
  float left
  width 100%
  text-align center
  a
    display block
    color white
    text-align center
    padding 14px 10px
    font-family "Lucida Sans", "Lucida Sans Regular", "Lucida Grande","Lucida Sans Unicode", Geneva, Verdana, sans-serif
    font-size 12px
    font-weight 500
    text-decoration none
    &:hover:not(.active)
        background-color #111
        
.active
    background-color #04aa6d
// HERO SECTION

.hero
    background-image url(img/heroimg.webp)
    height 600px
    width 100%
    background-size cover
    position relative
    z-index 0
    &-image
            position relative
            display block
           &-content
               position relative
               top 64px
               left 45px
               z-index -1
    &-heading
             width 80%
             margin auto
             top 20px
             color white
             font-size 44px
             font-family "Lucida Sans", "Lucida Sans Regular", "Lucida Grande","Lucida Sans Unicode", Geneva, Verdana, sans-serif
             z-index 1
             &-sub
                   font-size 30px
                   font-family "Lucida Sans", "Lucida Sans Regular", "Lucida Grande","Lucida Sans Unicode", Geneva, Verdana, sans-serif
                   color white
                   margin 0
                   margin-top -4px
    &-subtxt
        font-size 18px
        font-family "Lucida Sans", "Lucida Sans Regular", "Lucida Grande","Lucida Sans Unicode", Geneva, Verdana, sans-serif
        color white
        margin-top 35px
// ABOUT

.about
    background-color #eaeef1
    height 550px
    width 100%
    position relative
    margin-top -15px
    overflow-x hidden
    overflow-y clip
    &-text
        margin-top 130px
        z-index 1
        position relative
    &-heading
        color rgb(0, 0, 0)
        font-size 50px
        font-family MarkOT-Bold
        font-weight bold
        margin-top 150px
        &-sub
            color rgb(0, 0, 0)
            font-size 40px
            font-family "Lucida Sans", "Lucida Sans Regular", "Lucida Grande","Lucida Sans Unicode", Geneva, Verdana, sans-serif
            font-weight 700
    &-subtxt
        color rgb(0, 0, 0)
        font-size 15px
        font-family "Lucida Sans", "Lucida Sans Regular", "Lucida Grande","Lucida Sans Unicode", Geneva, Verdana, sans-serif
        font-weight 400
        margin-left 100px
        &1
            color rgb(0, 0, 0)
            font-size 15px
            font-family "Lucida Sans", "Lucida Sans Regular", "Lucida Grande","Lucida Sans Unicode", Geneva, Verdana, sans-serif
            font-weight 400
            margin-left 100px
    &-img
        width 650px
        margin-left 15%
.small-gola
    position absolute
    top 80px
    left 140px
.medium-gola
    position absolute
    left -80px
    top 120px
    width 300px
    opacity 0.2
    z-index 0
.big-gola
    position absolute
    padding-top 120px
    margin-left 800px
    width 25%
    opacity 0.2
// WHY US

.why-us
    background-color #fdfdfd
    width 100%
    position relative
    margin-top -15px
    overflow-x hidden
    overflow-y clip
.small-gola-whyus
    position absolute
    top 125px
    left 80px
    opacity 0.2
    &-subtext
        font-size 28px
        font-family MarkOT-Bold
        color rgb(0, 0, 0)
        font-weight 500
.card-container
    display flex
    flex-wrap wrap
    justify-content center
    margin 10% 10%
div
    display block
    unicode-bidi isolate
.whyus
    &-text
        padding 20px
        h3
            font-size 1.5rem
            font-famliy "MarkOT-Medium"
        p
            font-size 1rem
            font-family "MarkOT-Regular"
            margin-top 10px
            margin-bottom 0
    &-svg
        width 30%
        position relative
        left 75%
        top -75px
.overlay-image
    position absolute
    top 100%
    left 15%
    transform translate(-50%, -50%)
    width 50px
    height 50px
    z-index 1
.greygola
    position absolute
    background-color grey
    opacity 0.2
    border-radius 50%
    width 80px
    height 80px
    margin-top -80px
    left 70
.why-column
    box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.2)
    background-color #ffffff
    border-radius 15px
    width 15%
    width calc(25% - 20px)
    margin 10px
    margin-bottom 10%
    padding 20px
    box-sizing border-box
// SERVICES
.main-container
    height 500px
.services
    height 250px
    width 100%
    background-color #24272c
    &-container
        background-color #ffff
        width 100%
        height 750px
        overflow-x hidden
        overflow-y clip
        &-dark
            height 550px
            background-color #0b0b29
    &-card
        display grid
        align-items center
        grid-gap 140px
        margin auto
        padding 5%
        grid-template-columns 1.5fr 1.5fr
        &-dark
            margin 100px 60px
            display grid
            align-items center
            grid-template-columns 1.5fr 1fr
            grid-gap 140px
        img 
            width 100%
            border-radius 50px
    &-text
        h2
            font-size 46px
        p
            font-size 16px
            text-align left
             font-family "Lucida Sans", "Lucida Sans Regular", "Lucida Grande"
        &-dark
            h2
                font-size 46px
                color #e6e6e6
            p
                font-size 20px
                color #e6e6e6
                text-align left
                font-family "Lucida Sans", "Lucida Sans Regular", "Lucida Grande"
.svg
    width 50px
    position absolute
    top -45px
    right 20px
.service
    &-heading
        position absolute
        padding 7%
        color rgb(255, 255, 255)
        font-size 48px
        font-family MarkOT-Bold
        font-weight 600
        padding-left 18%
        padding-bottom 0px
    &-gola
        position absolute
        padding-top 25px
        margin-left 150px
    &-card
        &-heading
            font-size 34px
            text-align left
            font-family MarkOT-Bold
            &-dark
                font-size 40px
                text-align left
                color #ffff
                font-family MarkOT-Bold
.img-service-dark
    height 700px
    width 500px
    margin-top 50px
    border-radius 25px
    margin-left 5%
.contacto-btn
    background #f01a6d
    border none
    padding 2%
    color white
    font-size 14px
    font-family "MarkOT-Regular"
    border-radius 5px
    &-dark
        align-items end
        background #f01a6d
        border none
        padding 2%
        color white
        font-size 14px
        font-family sans-serif
        border-radius 5px
    &-dark-map
        align-items end
        background #f01a6d
        border none
        padding 1%
        color white
        font-size 13px
        font-family sans-serif
        border-radius 5px
        margin 2%
        font-weight 700
// MAP

.map
    height 800px
    width 100%
    background-color white
    &img
        height 550px
        width 100%
        margin 2% 0%
    &-txt
        text-align center
    &-subtxt
        font-size 15px
        font-family "Lucida Sans", "Lucida Sans Regular", "Lucida Grande","Lucida Sans Unicode", Geneva, Verdana, sans-serif
        color rgb(0, 0, 0)
        font-weight 400
// SLIDER

.slider
    display flex
    margin-left 5%
    &card-container
        position relative
        overflow hidden
        background-color #e6e6e6
        height 700px
        display flex
        justify-content center
        align-items center
.left-section,.middle-section, .right-section
    flex 1
    img
        width 85%
        height 95%
        border-radius 20px
        transition transform 0.5s
.middle-section
    img
        height 350px
        transform scale(1.2)
.prev
    position absolute
    left 10px
    margin-top 50%
    margin-left 20%
.next
    position absolute
    right 10px
    margin-top 50%
    margin-right 20%
// joinus

.join-us-container
    height 500px
    background-color #ffff
.img-joinus
    border-radius 50px
    height 500px
    width 400px
    margin 0%
    margin-top -20%
.joinus-card
    margin 125px 150px
    display grid
    align-items center
    grid-template-columns 1fr 1.5fr
    grid-gap 140px
// signup
.signup
    height 300px
    width 100%
    background-color rgb(11, 11, 41)
    margin-bottom -5%
    &-heading
        padding 4%
        color rgb(255, 255, 255)
        font-size 40px
        font-family "Lucida Sans", "Lucida Sans Regular", "Lucida Grande","Lucida Sans Unicode", Geneva, Verdana, sans-serif
        font-weight 600
        padding-left 30%
        padding-bottom 0px
form.example
    input[type="text"]
        padding 10px
        margin 11px
        font-size 17px
        border 1px solid grey
        float left
        width 45%
        background #f1f1f1
        border-radius 10px
    button
        float left
        width 10%
        margin 10px
        padding 10px
        background #f01a6d
        border none
        color white
        font-size 17px
        border-left none
        font-family "Lucida Sans", "Lucida Sans Regular", "Lucida Grande","Lucida Sans Unicode", Geneva, Verdana, sans-serif
        cursor pointer
        border-radius 10px
        font-weight 500
.signupcontainer
    padding-left 30%
// footer1

#footer
    &-section
        background-color #e6e6e6
    &-links
        display flex
        margin-left 100px
.font-bold
    font-family "MarkOT-Medium"
.column
    padding 20px
    margin 10px
#follow-us
    margin-top 50px
.contact-us
    margin-left 250px
.social
    padding 2px
    width 20px
#bts-logo
    width 300px
    background-repeat no-repeat
    margin-left 90px
    padding 30px
    img
        width 150px
.svg
    width 15%
// footer2

.footer2
    height 60px
    width 100%
    background-color rgb(11, 11, 41)
    margin 0%
    &-left
        color white
        font-size 14px
        font-family "Lucida Sans", "Lucida Sans Regular", "Lucida Grande","Lucida Sans Unicode", Geneva, Verdana, sans-serif
        padding 2%
        margin-left 15%
    &-right
        color white
        font-size 14px
        font-family "Lucida Sans", "Lucida Sans Regular", "Lucida Grande","Lucida Sans Unicode", Geneva, Verdana, sans-serif
        padding 1%
        margin-left 50%
